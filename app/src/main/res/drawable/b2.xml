<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3385ff" />
            <gradient android:angle="-90" android:startColor="#1a75ff" android:endColor="#4d94ff"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1a53ff" />
            <solid android:color="#3366ff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1a75ff" />
            <gradient android:angle="-90" android:startColor="#4d94ff" android:endColor="#008ae6" />
        </shape>
    </item>
</selector>